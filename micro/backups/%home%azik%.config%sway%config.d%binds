#ГОРЯЧИИ КЛАВИШИ
	set {
		$mod Mod4
		$mn exec kitty --class=swlaunch sway-launcher-desktop
		$term kitty
		$sw exec kitty /usr/bin/sway-launcher-desktop
	}

	bindsym --to-code {
    	$mod+Return exec $term
    	$mod+Alt+Return exec foot
    	$mod+Shift+Return exec kitty --class=katfloat

    	$mod+q kill
    	$mod+c centerwindow

    	$mod+d exec nwg-drawer -nocats -nofs -d -c 9 -spacing 12 -mb -49
    	$mod+Shift+d exec $mn

    	$mod+r reload
    	$mod+s exec spotify
    	$mod+Shift+b exec /usr/lib/floorp/floorp --class="floorp"
    	$mod+b exec vivaldi-stable
    	$mod+t exec telegram-desktop
    	$mod+Shift+t exec discord
    	$mod+n exec nemo
    	$mod+Shift+n exec nemo --name=nemfloat
    	$mod+z exec portproton
    	$mod+Shift+z exec /home/azik/Документы/PollyMC/PollyMC
    	
    	Alt+F1 exec playerctl play-pause
    	Alt+F2 exec playerctl previous
    	Alt+F3 exec playerctl nexе

		$mod+m exec swaymsg exit
		$mod+Shift+m exec poweroff
		$mod+Alt+m exec reboot

		$mod+x mode "resize"
    	
    	Alt+Left focus left
    	Alt+Down focus down
    	Alt+Up focus up
    	Alt+Right focus right
    
    	Shift+Left move left
    	Shift+Down move down
    	Shift+Up move up
    	Shift+Right move right

    	$mod+e splith
    	$mod+w splitv
    	
    	$mod+f fullscreen
		$mod+space floating toggle
    	$mod+Shift+space focus mode_toggle

        $mod+g layout tabbed
    	$mod+v layout toggle split
		$mod+p move scratchpad
		$mod+Shift+p scratchpad show

		Print exec grim -g "$(slurp)" - | wl-copy
		Print+Shift exec grim -g "$(slurp)"
		Print+Alt exec grim
    }
    
    bindsym --to-code  --whole-window --border {
       $mod+button4 resize shrink height 5 px or 5 ppt
       $mod+button5 resize grow height 5 px or 5 ppt
       $mod+shift+button4 resize shrink width 5 px or 5 ppt
       $mod+shift+button5 resize grow width 5 px or 5 ppt
    }
