# ВКЛАДКИ
tab_bar_min_tabs            2
tab_bar_edge                button
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          {title}

# ВНЕШНИЙ ВИД
window_margin_width 7
confirm_os_window_close 0
resize_in_steps no
resize_debounce_time 0
#background_opacity 0.98
#background_tint 0.9
dynamic_background_opacity true

font_family       Cantarell Regular
bold_font         Cantarell Bold
italic_font       Cantarell Italic
bold_italic_font  Cantarell Bold Italic
font_size         11.0

kitty_mod ctrl+shift

map kitty_mod+right next_tab
map kitty_mod+left  previous_tab
map kitty_mod+w     new_tab
map kitty_mod+q     close_tab
map kitty_mod+.     move_tab_forward
map kitty_mod+,     move_tab_backward
map kitty_mod+alt+t set_tab_title

map f11             toggle_fullscreen
map f10             toggle_maximized
map kitty_mod+u     kitten unicode_input
map kitty_mod+c     edit_config_file
map kitty_mod+escape kitty_shell window

map kitty_mod+]    set_background_opacity +0.1
map kitty_mod+[    set_background_opacity -0.1
map kitty_mod+p    set_background_opacity 1
map kitty_mod+o    set_background_opacity default
map kitty_mod+delete clear_terminal reset active

include current-theme.conf


# BEGIN_KITTY_THEME
# Catppuccin-Macchiato
include current-theme.conf
# END_KITTY_THEME